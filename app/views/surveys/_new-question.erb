<h2><%= @survey.title %></h2> |
<form method="POST" class="question-creation" action="/questions">

    <input type="hidden" name="question[survey_id]" value="<%= @survey.id %>">

    <label for="question">Question:</label><br />
    <input type="text" name="question[content]" size="50" placeholder="question" required><br />

  <input type="submit" class="question-submission" value="Add Question">
</form>
