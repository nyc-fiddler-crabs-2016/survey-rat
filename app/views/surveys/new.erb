<div class="jumbotron">
<div id="survey-title">
<h2>Create a survey:</h2>
<form id="create-survey-form" method="POST" action="/surveys">
  <input type="hidden" name="survey[user_id]" value="<%= current_user.id %>">

  <label for="title">Survey Title:</label><br />
  <input  type="text" name="survey[title]" size="50" placeholder="title" required><br />

  <input type="submit" value="Submit Title">
</form>
</div>
<div id="survey-title-show"></div>
<div id="new-question"></div>
<div id="current-question"></div>
<div id="new-possible-choice"></div>
<div id="done-questions"></div>

</div>
